
@model List<Shopbanhang.Models.cartitem>
@{
    ViewBag.Title = "Giỏ hàng của bạn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model == null || Model.Count == 0)
{
    <p class="text-info text-center">
        Giỏ hàng của bạn rỗng!
    </p>
}
else
{





    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Products</th>
                                    <th>Gía</th>
                                    <th>Số lượng</th>
                                    <th>Tổng</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="img/cart/cart-1.jpg" alt="">
                                            <h5>@item.name</h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            @item.price
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">

                                                <div class="pro-qty" id="quantity">

                                                    <input type="text" value="@item.soluong">

                                                </div>

                                            </div>
                                        </td>
                                        <td class="shoping__cart__total">
                                            @item.thanhtien
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <a href="~/Shoppingcart/XoaKhoiGio/@item.id"><span class="icon_close"></span></a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="~/products/index" class="primary-btn cart-btn">Tiếp tục mua sắm</a>
                        <a data-id="" class="primary-btn cart-btn cart-btn-right">
                            <span class="icon_loading"></span>
                            Upadate Cart
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__continue">
                        <div class="shoping__discount">
                            <h5>Discount Codes</h5>
                            <form action="#">
                                <input type="text" placeholder="Enter your coupon code">
                                <button type="submit" class="site-btn">APPLY COUPON</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="shoping__checkout">
                        <h5>Cart Total</h5>
                        <ul>
                            <li>Subtotal <span>@Model.Sum(m => m.thanhtien)</span></li>
                            <li>Tổng tiền  <span>@Model.Sum(m => m.thanhtien)</span></li>
                        </ul>
                        <a href="~/Orders/create" class="primary-btn">PROCEED TO CHECKOUT</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
}


