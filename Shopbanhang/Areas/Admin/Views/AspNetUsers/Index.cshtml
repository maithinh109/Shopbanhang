@model IEnumerable<Shopbanhang.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/Layoutadmin.cshtml";
}


<div class="container">
    <p>
        @Html.ActionLink("Create New", "Create", null, new {@class= "btn btn-gradient-danger btn-fw " })
    </p>
    <table class="table">
        <tr>
            <th>
                Email
            </th>



            <th>
                Số điện thoại
            </th>

            <th>
                Tên người dùng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success btn-fw" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-fw" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = " btn btn-outline-dark btn-fw" })
                </td>
            </tr>
        }

    </table>

</div>